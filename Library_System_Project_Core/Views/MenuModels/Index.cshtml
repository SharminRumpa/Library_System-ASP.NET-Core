@model IEnumerable<Library_System_Project_Core.Models.MenuModel>

@{
    ViewData["Title"] = "Index";
}

<br />

<h2 class="text-center">Role with Action</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuHelperModelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RollIdText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuHelperModelId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RollIdText)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
