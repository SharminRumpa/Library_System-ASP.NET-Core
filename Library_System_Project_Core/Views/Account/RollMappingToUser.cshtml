@model IList<UserRollMapping>
@{
    ViewData["Title"] = "RollMappingToUser";
}
<br /><br />

<h2 class="text-center">Roll Mapping To User</h2>

<hr />


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form name="applicationRoles" asp-action="RollMappingToUser" asp-controller="Account" method="post">

                <div class="col-md-6">
                    Roll Applied For : @ViewData["UserName"].ToString()
                    <input type="hidden" name="UserName" value="@ViewData["UserName"].ToString()" />
                </div>

                <table class="table table-hover table-dark">
                    <tr>
                        <td>
                            RollName
                        </td>
                        <td>
                            Tick
                        </td>
                    </tr>

                    @{
                        int index = 0;
                    }

                    @foreach (UserRollMapping applicationRoles in Model)
                    {

                        <tr>
                            <td>
                                <input type="text" readonly name="applicationRoles[@index].Role.Name" value="@applicationRoles.Role.Name" />

                            </td>
                            <td>
                                @Html.CheckBox("applicationRoles[" + index + "].IsChecked")

                            </td>
                        </tr>
                        {
                            index += 1;
                        }
                    }
                </table>

                <div class="form-check">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

