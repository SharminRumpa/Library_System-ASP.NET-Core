
@{
    ViewData["Title"] = "RollList";
}


<br />

<h2 class="text-center">Role List</h2>
<br />
<a href="@Url.Action("RollCreate", "Account")" class="btn btn-secondary btn-sm mr-1">Create</a>

<hr />

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>
                    Role Name
                </th>

            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name  
                    </td>
                </tr>
            }
        </tbody>
    </table>

